<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-9dp"
    android:theme="@style/Theme.Design.NoActionBar"
    tools:context=".bokanyActivity">

    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/logedin_bar" />

    <CalendarView
        android:id="@+id/datumCalender"
        style="@style/CalenderViewCustom"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="95dp"
        android:background="@color/aluminum"
        android:dateTextAppearance="@style/CalenderViewDateCustomText"
        android:focusedMonthDateColor="@color/primary"
        android:selectedWeekBackgroundColor="@drawable/buttons_round"
        android:splitMotionEvents="true"
        android:theme="@android:style/Widget.Material.Light.CalendarView"
        android:unfocusedMonthDateColor="@color/primary"
        android:weekDayTextAppearance="@color/black"
        android:weekNumberColor="@color/black"
        android:weekSeparatorLineColor="@color/black" />


    <Button
        android:id="@+id/addbutton"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons_round"
        android:includeFontPadding="false"
        android:text="BOKA "
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/antalElever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="114dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Antal elever"
        android:inputType="number|textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:theme="@style/AlertDialog.AppCompat.Light" />

    <EditText
        android:id="@+id/klassRum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="172dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Klassrum "
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:theme="@style/AlertDialog.AppCompat.Light" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="234dp"
        android:layout_marginRight="20dp"
        android:ellipsize="middle"
        android:text="Wi-Fi"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="171dp"
        android:layout_marginLeft="171dp"
        android:layout_marginTop="232dp"
        android:layout_marginRight="20dp"
        android:ellipsize="middle"
        android:text="TV"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="234dp"
        android:layout_marginRight="20dp"
        android:ellipsize="middle"
        android:scrollbarThumbHorizontal="@drawable/logedin_bar"
        android:text="VÃ¤rme"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/backImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="337dp"
        android:layout_marginRight="337dp"
        app:srcCompat="@drawable/backicon" />

</RelativeLayout>





