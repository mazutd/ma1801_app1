        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Nackademin"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:textStyle="bold"
        app:fontFamily="@font/muli" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="107dp"
        android:text="38% av alla rum i Nackademin är lediga  den här veckan eller "
        android:textColor="@android:color/white"
        app:fontFamily="@font/roboto_medium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="55dp"
        android:text="Passa på och boka in klassrum innan bla bla  Klicka här eller längst upp till höger om du vill boka nu..."
        android:textColor="@android:color/white"
        android:textStyle="italic" />

</RelativeLayout>
